<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="acquirer_form_tenpay" model="ir.ui.view">
            <field name="name">acquirer.form.tenpay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer_display"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'tenpay')]}">
                        <group>
                            <field name="tenpay_partner"/>
                            <field name="tenpay_url"/>
                            <field name="tenpay_return_url"/>
                            <field name="tenpay_notify_url"/>
                            <field name="tenpay_refund_url"/>
                            <field name="tenpay_refund_server_url"/>
                            <field name="tenpay_op_user_passwd"/>
                            <field name="tenpay_key"/>
                        </group>
                        <button name="tenpay_test" string="测试" type="object" class="oe_highlight"></button>
                    </group>

                </xpath>
            </field>
        </record>

        <record id="transaction_form_tenpay" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.tenpay</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="cm_payment_alipay.transaction_form_refunds"/>
            <field name="arch" type="xml">
                <xpath expr='//notebook' position='inside'>
                    <page string="tenpay TX Details">
                        <group>
                            <field name="tenpay_txn_id" readonly="1"/>
                            <field name="tenpay_txn_type" readonly="1"/>
                        </group>
                    </page>
                </xpath>
                <!--添加按钮用于更新财付通退款信息,请查看tenpay_refund_state说明-->
                <xpath expr='//header/button[@name="refund"]' position='before'>
                    <button name="tenpay_refund_state" type="object" class="oe_highlight" string="更新支付状态"
                            attrs="{'invisible': [('payment_state', 'in', ['refund_done','pay_done','normal'])]}"
                            />
                </xpath>
            </field>
        </record>
        -->

    </data>
</openerp>