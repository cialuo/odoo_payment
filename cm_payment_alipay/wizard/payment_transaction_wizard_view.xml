<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="payment_transaction_wizard_form" model="ir.ui.view">
            <field name="name">payment.transaction.wizard</field>
            <field name="model">payment.transaction.wizard</field>
            <field name="arch" type="xml">
                <form string="Message" version="7.0">

                    <group>
                        <field name="refunds"/>
                    </group>
                    <footer>
                        <button name="but_yes" string="确认" type="object" class="oe_highlight" context="{'refunds':refunds}"/>
                        or
                        <button name="but_no" string="取消" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_payment_transaction_wizard" model="ir.actions.act_window">
            <field name="name">payment.transaction.wizard</field>
            <field name="res_model">payment.transaction.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="payment_transaction_wizard_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>


    </data>
</openerp>
