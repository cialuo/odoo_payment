<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="acquirer_form_alipay" model="ir.ui.view">
            <field name="name">acquirer.form.alipay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer_display"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'alipay')]}">
                        <group>
                            <field name="alipay_service"/>
                            <field name="alipay_partner"/>
                            <field name="alipay_key"/>
                            <field name="alipay_seller_email"/>
                            <field name="alipay_sign_type"/>
                            <field name="alipay_input_charset"/>
                            <field name="alipay_payment_type"/>
                            <field name="alipay_url"/>
                            <field name="alipay_return_url"/>
                            <field name="alipay_refund_notify_url"/>
                            <button name="test" string="测试" type="object" class="oe_highlight"
                                    context="{
                                        'service':alipay_service,
                                        'partner':alipay_partner,
                                        'key':alipay_key,
                                        'seller_email':alipay_seller_email,
                                        'sign_type':alipay_sign_type,
                                        '_input_charset':alipay_input_charset,
                                        'payment_type':alipay_payment_type,
                                        'url':alipay_url,
                                        'return_url':alipay_return_url,
                                        }"
                                    />
                        </group>
                    </group>

                </xpath>
            </field>
        </record>

       <record id="transaction_form_alipay" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.alipay</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="transaction_form_refunds"/>
            <field name="arch" type="xml">


                <xpath expr='//notebook' position='inside'>
                    <page string="alipay TX Details">
                        <group>
                            <field name="alipay_txn_id" readonly="1"/>
                            <field name="alipay_txn_type" readonly="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
