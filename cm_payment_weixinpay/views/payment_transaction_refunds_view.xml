<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="transaction_form_refunds" model="ir.ui.view">
            <field name="name">payment.transaction.form</field>
            <field name="model">payment.transaction</field>
            <field name="arch" type="xml">
                <form string="Payment Transactions" create="false" copy="false" unlink="false">


                    <header>
                        <button name="refund" type="object" class="oe_highlight" string="退款"
                                attrs="{'invisible': [('payment_state', 'in', ['refund_done','pay_done','normal'])]}"
                                />
                        <button name="%(cm_payment_weixinpay.action_payment_transaction_wizard)d"
                                attrs="{'invisible': [('payment_state', 'in', ['refund_processing','refund_done','refunds','pay_processing'])]}" type="action"
                                class="oe_highlight" string="申请退款"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,done"
                               statusbar_colors='{"pending":"red","done":"blue"}'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="reference" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="date_create" readonly="1"/>
                                <field name="fees" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="partner_reference" readonly="1"/>
                            </group>
                            <group>
                                <field name="acquirer_id" readonly="1"/>
                                <field name="acquirer_reference" readonly="1"/>
                                <field name="date_validate" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="state_message" readonly="1"/>
                            </group>
                            <group>
                                <field name="partner_name" readonly="1"/>
                                <field name="partner_address" readonly="1"/>
                                <field name="partner_email" readonly="1"/>
                                <field name="partner_lang" readonly="1"/>
                                <field name="partner_zip" readonly="1"/>
                                <field name="partner_city" readonly="1"/>
                                <field name="partner_country_id" readonly="1"/>
                            </group>
                            <group attrs="{'invisible': [('payment_state', 'in', ['pay_done','normal'])]}">
                                <field name="refunds" string="退款理由"/>
                                <field name="date_order_refunds"
                                       readonly="1"/>
                                <field name="date_confirm"
                                       readonly="1"/>
                            </group>
                            <group>
                                <field name="payment_state" readonly="1"/>
                                </group>
                        </group>
                        <notebook>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'
                               placeholder="Send a message to the group"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="transaction_list_refunds" model="ir.ui.view">
            <field name="name">payment.transaction.list</field>
            <field name="model">payment.transaction</field>
            <field name="arch" type="xml">
                <tree string="Payment Transactions" create="false" copy="false" unlink="false">
                    <field name="reference"/>
                    <field name="acquirer_id"/>
                    <field name="partner_id"/>
                    <field name="partner_name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="transaction_refunds" model="ir.ui.view">
            <field name="name">支付订单查询</field>
            <field name="model">payment.transaction</field>
            <field name="arch" type="xml">
                <search>
                    <field name="reference"/>
                    <field name="acquirer_id"/>
                    <field name="partner_id"/>
                    <field name="partner_name"/>
                </search>
            </field>
        </record>

        <record id="action_payment_transaction_refunds" model="ir.actions.act_window">
            <field name="name">Payment Transactions</field>
            <field name="res_model">payment.transaction</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
            <field name="search_view_id" ref="transaction_refunds"/>
            <field name="view_id" ref="transaction_list_refunds"/>
        </record>

        <menuitem name="付款信息" id="portal_sales_orders_website" parent="portal.portal_orders"
                  action="action_payment_transaction_refunds" sequence="21"/>


        <record id="action_payment_transaction_refunds_view1" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="transaction_refunds"/>
            <field name="act_window_id" ref="action_payment_transaction_refunds"/>
        </record>
        <record id="action_payment_transaction_refunds_view2" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="transaction_form_refunds"/>
            <field name="act_window_id" ref="action_payment_transaction_refunds"/>
        </record>


        <menuitem name="付款信息" id="portal_sales_orders_website" parent="portal.portal_orders"
                  action="action_payment_transaction_refunds" sequence="21"/>




    </data>
</openerp>
