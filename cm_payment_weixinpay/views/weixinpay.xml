<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <template id="weixinpay_acquirer_button">
            <form t-att-action="tx_values['qrcode_url']" method="post" target="_self">
                <input type="hidden" name="sale_order_id" t-att-value="tx_values['sale_order_id']"/>
                <button type="submit" width="100px"
                        t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/cm_payment_weixinpay/static/src/img/weixinpay_icon.png"/>
                    <span t-if="submit_txt">
                        <t t-esc="submit_txt"/>
                        <span class="fa fa-long-arrow-right"/>
                    </span>
                </button>
            </form>
        </template>

    </data>
</openerp>