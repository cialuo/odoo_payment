<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="acquirer_form_weixinpay" model="ir.ui.view">
            <field name="name">acquirer.form.weixinpay</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer_display"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'weixinpay')]}">
                        <group>
                            <field name="weixinpay_appid"/>
                            <field name="weixinpay_secret_key"/>
                            <field name="weixinpay_mch_id"/>
                            <field name="weixinpay_notify_url"/>
                            <field name="weixinpay_payurl"/>
                            <button name="test" string="测试" type="object" class="oe_highlight"
                                    context="{
                                        'appid':weixinpay_appid,
                                        'mch_id':weixinpay_mch_id,
                                        'notify_url':weixinpay_notify_url,
                                        'url':weixinpay_payurl,
                                        'secret_key':weixinpay_secret_key
                                        }"
                                    />
                        </group>
                    </group>

                </xpath>
            </field>
        </record>

       <record id="transaction_form_weixinpay" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.weixinpay</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="cm_payment_alipay.transaction_form_refunds"/>
            <field name="arch" type="xml">


                <xpath expr='//notebook' position='inside'>
                    <page string="weixinpay TX Details">
                        <group>
                            <field name="weixinpay_txn_id" readonly="1"/>
                            <field name="weixinpay_txn_type" readonly="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
