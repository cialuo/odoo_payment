<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="third_party_login_wizard_form" model="ir.ui.view">
            <field name="name">bind.user.wizard</field>
            <field name="model">bind.user.wizard</field>
            <field name="arch" type="xml">
                <form string="用户" version="7.0">

                    <group>
                        <field name="login"/>
                        <field name="password" password="True"/>
                    </group>
                    <footer>
                        <button name="but_yes" string="确认" type="object" class="oe_highlight" context="{'login':login,'password':password}"/>
                        or
                        <button name="but_no" string="取消" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_third_party_login_wizard" model="ir.actions.act_window">
            <field name="name">绑定系统用户</field>
            <field name="res_model">bind.user.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="third_party_login_wizard_form"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>


    </data>
</openerp>
